<% include partials/header %>
<div class = "container">
        <h1 style = "text-align: center">Edit <%= concetto.name %></h1><br>
    <div class = "row">
        <div style="width: 30% ; margin: 0 auto;">
              <form method="POST" action="/concetto/<%= concetto._id %>?_method=PUT" >
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= concetto.name %>" name="concetto[name]">
                  </div>
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= concetto.videoId %>" name="concetto[videoId]">
                  </div>
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= concetto.description %>" name="concetto[description]">
                  </div>
                  <div class = "form-group">
                        <button class="form-control btn btn-primary" type="submit">SUBMIT</button>
                 </div>
              </form>  
        </div>
    </div>
</div>


<% include partials/footer %>