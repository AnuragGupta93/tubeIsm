<% include partials/header %>
<div class = "container">
        <h1 style = "text-align: center">Edit <%= srijan.name %></h1><br>
    <div class = "row">
        <div style="width: 30% ; margin: 0 auto;">
              <form method="POST" action="/srijan/<%= srijan._id %>?_method=PUT" >
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= srijan.name %>" name="srijan[name]">
                  </div>
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= srijan.videoId %>" name="srijan[videoId]">
                  </div>
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= srijan.description %>" name="srijan[description]">
                  </div>
                  <div class = "form-group">
                        <button class="form-control btn btn-primary" type="submit">SUBMIT</button>
                 </div>
              </form>  
        </div>
    </div>
</div>


<% include partials/footer %>