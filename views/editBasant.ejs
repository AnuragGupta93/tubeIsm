<% include partials/header %>
<div class = "container">
        <h1 style = "text-align: center">Edit <%= basant.name %></h1><br>
    <div class = "row">
        <div style="width: 30% ; margin: 0 auto;">
              <form method="POST" action="/basant/<%= basant._id %>?_method=PUT" >
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= basant.name %>" name="basant[name]">
                  </div>
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= basant.videoId %>" name="basant[videoId]">
                  </div>
                  <div class = "form-group">
                        <input class="form-control" type="text" value="<%= basant.description %>" name="basant[description]">
                  </div>
                  <div class = "form-group">
                        <button class="form-control btn btn-primary" type="submit">SUBMIT</button>
                 </div>
              </form>  
        </div>
    </div>
</div>


<% include partials/footer %>